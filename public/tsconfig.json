{
    // "ts-node": {
    //     "require": ["tsconfig-paths/register"],
    //     "swc": true,
    //     "esm": true,
    // },
    "compilerOptions": {
        "lib": [
            "dom",
            "ES2023"
        ],
        "module": "ES2022",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "target": "ES2020",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "allowJs": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "./elements/*"
            ],
        },
        "outDir": "build/rollup/elements",
    },
    "include": [
        "**/*.ts"
    ],
    // "assets": [
    //     "**/*.js"
    // ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ],
}